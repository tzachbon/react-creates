{
  "packages": [
    "packages/*"
  ],
  "version": "1.0.0",
  "useWorkspaces": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "npx jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "packages/*/src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "ts-jest": "^26.1.3",
    "typescript": "^4.0.2"
  }
}
