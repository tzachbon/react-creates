{
  "name": "react-creates-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:packages": "tsc --build",
    "build:vscode": "npm run build -w react-creates-vsc",
    "build": "npm-run-all build:*",
    "publish:vscode": "node -r @ts-tools/node/r scripts/publish-vscode.ts",
    "clean": "rimraf ./packages/*/dist",
    "lint": "eslint .",
    "pretest": "npm run build",
    "test:packages": "mocha \"packages/**/dist/test/**/*.test.js\" --parallel",
    "test": "npm-run-all test:*",
    "watch:packages": "npm run build:packages -- -w --preserveWatchOutput",
    "watch:vscode": "npm run watch -w react-creates-vsc",
    "watch": "run-p watch:*"
  },
  "author": {
    "email": "tzachbonfil@gmail.com",
    "name": "tzachbon",
    "url": "https://github.com/tzachbon"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "devDependencies": {
    "@ts-tools/node": "^4.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/rimraf": "^3.0.2",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "expect": "^28.1.0",
    "glob": "^8.0.3",
    "jest-util": "^28.1.0",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2",
    "util": "^0.12.4",
    "vsce": "^2.8.0",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
