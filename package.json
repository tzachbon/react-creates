{
  "name": "react-creates-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:packages": "tsc --build",
    "build:vscode": "npm run build -w react-creates-vscode",
    "build": "run-p build:*",
    "clean": "rimraf ./packages/*/dist",
    "lint": "eslint .",
    "pretest": "npm run build",
    "test:packages": "mocha \"packages/**/dist/test/**/*.test.js\" --parallel",
    "test:vscode": "npm run test -w react-creates-vscode",
    "test": "run-p test:*"
  },
  "author": {
    "email": "tzachbonfil@gmail.com",
    "name": "tzachbon",
    "url": "https://github.com/tzachbon"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/react": "^18.0.1",
    "@types/react-dom": "^18.0.0",
    "@types/rimraf": "^3.0.2",
    "@types/vscode": "^1.66.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "expect": "^27.5.1",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "vsce": "^2.7.0"
  }
}
