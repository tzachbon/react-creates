{
	"name": "react-creates-vsc",
	"displayName": "React Creates",
	"description": "React Creates (CLI) for you common and useful tools",
	"version": "0.0.8",
	"publisher": "TzachBonfil",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"icon": "assets/logo.png",
	"homepage": "https://github.com/tzachbon/react-creates/tree/master/packages/react-creates-vsc/README.md",
	"repository": {
		"url": "https://github.com/tzachbon/react-creates/tree/master/packages/react-creates-vsc.git",
		"type": "github"
	},
	"activationEvents": [
		"onCommand:react-creates-vsc.create",
		"onCommand:react-creates-vsc.component"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "react-creates-vsc.component",
				"title": "React Creates Component",
				"args": [
					"exec"
				],
				"tasks": [
					{
						"suppressTaskName": true,
						"taskName": "rspec",
						"args": [
							"rspec",
							"${file}"
						],
						"isTestCommand": true
					},
					{
						"suppressTaskName": true,
						"taskName": "cucumber",
						"args": [
							"cucumber",
							"${file}"
						]
					}
				]
			},
			{
				"command": "react-creates-vsc.create",
				"title": "React Creates"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "react-creates-vsc.component"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"clean": "rm -rf out",
		"compile": "tsc ",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch ./",
		"pretest": "npm run clean && npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"deploy": "npx vsce publish patch"
	},
	"devDependencies": {
		"@types/chai": "^4.2.12",
		"@types/execa": "^2.0.0",
		"@types/glob": "^7.1.3",
		"@types/lodash": "^4.14.159",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/sinon": "^9.0.4",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"chai": "^4.2.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"sinon": "^9.0.3",
		"ts-loader": "^8.0.2",
		"ts-mocha": "^7.0.0",
		"typescript": "^3.8.3",
		"utility-types": "^3.10.0",
		"vscode-test": "^1.4.0",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"execa": "^4.0.3",
		"lodash": "^4.17.19",
		"react-creates": "^1.0.14"
	}
}
